            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.TestController">
    <children>
        <TextArea fx:id="textArea" layoutX="38.0" layoutY="145.0" onDragDetected="#triggerEncoding" prefHeight="226.0"
                  prefWidth="520.0"/>
        <Button fx:id="encodeTigger" layoutX="53.0" layoutY="36.0" mnemonicParsing="false" onAction="#triggerEncoding"
                prefHeight="26.0" prefWidth="212.0" text="ENCODE"/>
        <Button fx:id="decodeTigger" layoutX="300.0" layoutY="36.0" mnemonicParsing="false" onAction="#triggerDecoding"
                prefHeight="26.0" prefWidth="212.0" text="DECODE"/>
    </children>
</AnchorPane>
